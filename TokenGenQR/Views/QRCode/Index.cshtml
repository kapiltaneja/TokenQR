@model QRCodeModel
@{
    ViewData["Title"] = "Generate QR Code";
}
<div class="row mt-5">
    <div class="col-md-12 text-center">
        <h2>Please scan the QR or visit link given below to generate the Token</h2>
    </div>
    <div class="col-md-12">
        <form asp-action="Index">
            @if (!string.IsNullOrEmpty(Model.QRImageURL))
            {
                <div class="row mt-2" id="qrCodeImage">
                    <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                        <img height="500" width="500" src="@Model.QRImageURL" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                        <h3>OR</h3>
                        @* <a href="@Model.WebsiteURL">Visit to Get Token</a> *@
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                        <h3>@Model.WebsiteURL</h3>
                        @* <a href="@Model.WebsiteURL">Visit to Get Token</a> *@
                    </div>
                </div>
            }
        </form>
    </div>

    <div class="col-md-12">
        <button class="btn" value="Print">
        </button>
    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $("#QRCodeType").trigger("change");
        });

        function onQRCodeTypeChange() {
            let qrcodeType = $("#QRCodeType").val();
            $(".hideDiv").hide();
            $("#DIV" + qrcodeType).show();
        }
    </script>
}